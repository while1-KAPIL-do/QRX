<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fundu.kapil.qrscanner.Intro2_Activity"
    android:gravity="center_horizontal"
    android:weightSum="8"
    android:background="@color/colorPrimary">


    <TextView
        android:text="Build your own QR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="34dp"
        android:padding="20dp"
        android:textColor="@color/colorEndBlue"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="344dp"
            android:layout_height="159dp"
            app:srcCompat="@mipmap/f5"
            android:id="@+id/imageView2" />

        <TextView
            android:text="Create your Profile QR "

            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:id="@+id/textView_result1"
            android:scrollbars="vertical"
            android:layout_marginTop="-50dp"
            android:textAlignment="textStart"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="-50dp"
        android:rotation="0"
        android:weightSum="2">


        <ImageView
            android:layout_width="132dp"
            android:layout_height="101dp"
            app:srcCompat="@mipmap/f3"
            android:id="@+id/imageView3"/>
        <TextView
            android:text="Send Messages through QR "

            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_result2"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <Button
        android:text="finish"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/cardview_light_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:onClick="btn_intro"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold"
        android:textAlignment="center" />
</LinearLayout>