<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fundu.kapil.qrscanner.Intro_Activity"
    android:gravity="center_horizontal"
    android:weightSum="8"
    android:background="@color/colorPrimary">



    <TextView
        android:text="Scan any QR "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="34sp"
        android:padding="20dp"
        android:textColor="@color/colorEndBlue"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="166dp"
            android:layout_height="101dp"
            app:srcCompat="@mipmap/s1"
            android:id="@+id/imageView2"/>

        <TextView
            android:text="Aadhar Card"
            android:layout_width="wrap_content"
            android:padding="15sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_result1"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"
            android:layout_marginTop="30dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="2">
        <TextView
            android:text="Website QR"
            android:padding="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_result2"
            android:scrollbars="vertical"
            android:layout_marginTop="30dp"
            android:textAlignment="textStart"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="18sp"
            android:paddingTop="40sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"
            android:layout_marginRight="25dp"

            />

        <ImageView
            android:layout_width="132dp"
            android:layout_height="101dp"
            app:srcCompat="@mipmap/s2"
            android:id="@+id/imageView3" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="148dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/s3"
            android:layout_marginRight="30dp"
            android:id="@+id/imageView4"/>

        <TextView
            android:text="Product QR"
            android:padding="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_result3"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:textAlignment="textStart"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center_horizontal">
        <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_result"
            android:scrollbars="vertical"
            android:layout_marginTop="40dp"
            android:textAlignment="textStart"
            android:textColor="@color/zxing_custom_result_view"
            android:textSize="21sp"
            android:padding="15sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold|italic"
            android:layout_marginRight="20dp"

            />
        <ImageView
            android:layout_width="154dp"
            android:layout_height="137dp"
            app:srcCompat="@mipmap/s4"
            android:layout_weight="0.08" />


    </LinearLayout>
    <Button
        android:text="next"
        android:textSize="18sp"
        android:textColor="@color/cardview_light_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:onClick="btn_intro"
        android:fontFamily="sans-serif-smallcaps" />
</LinearLayout>